@using EntityLayer.Concrete
@model User

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>AgentUI Login</title>
    <link rel="stylesheet" href="~/themes/AgentTheme/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/themes/AgentTheme/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/themes/AgentTheme/assets/css/style.css">
    <link rel="shortcut icon" href="~/themes/AgentTheme/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <nav>
                            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                                <a class="nav-item nav-link col-6 active" id="nav-home-tab" data-toggle="tab" href="#nav-agent" role="tab" aria-controls="nav-home" aria-selected="true">Emlakçı</a>
                                <a class="nav-item nav-link col-6" data-toggle="tab" href="#nav-admin" role="tab" aria-controls="nav-profile" aria-selected="false">Yönetici</a>
                            </div>
                        </nav>
                        <div class="tab-content" id="nav-tabContent">
                            <div class="tab-pane fade show active" id="nav-agent" role="tabpanel" aria-labelledby="nav-agent-tab">
                                <div class="auth-form-light text-left p-5">
                                    <div class="brand-logo">
                                        @*<img src="~/themes/AgentTheme/assets/images/logo.svg">*@
                                    </div>
                                    <h4>Emlakçı Giriş Paneli</h4>
                                    <h6 class="font-weight-light">Devam etmek için giriş yapınız.</h6>
                                    <form method="post" class="pt-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-lg" name="UserName" placeholder="Kullanıcı Adı" value="@ViewBag.UsernameUser">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-lg" name="Password" placeholder="Şifre">
                                        </div>
                                        <input name="AccountType" value="User" readonly="readonly" style="display:none;" />
                                        <div class="mt-3">
                                            <p class="text-danger">@ViewBag.LoginErrorUser</p>
                                            <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="tab-pane fade" id="nav-admin" role="tabpanel" aria-labelledby="nav-admin-tab">
                                <div class="auth-form-light text-left p-5">
                                    <div class="brand-logo">
                                        @*
                                            <img src="~/themes/AgentTheme/assets/images/logo.svg">
                                        *@
                                    </div>
                                    <h4>Admin Giriş Paneli</h4>
                                    <h6 class="font-weight-light">Devam etmek için giriş yapınız.</h6>
                                    <form method="post" class="pt-3">
                                        <div class="form-group">
                                            <input type="text" class="form-control form-control-lg" name="UserName" placeholder="Kullanıcı Adı" value="@ViewBag.UsernameAdmin">
                                        </div>
                                        <div class="form-group">
                                            <input type="password" class="form-control form-control-lg" name="Password" placeholder="Şifre">
                                        </div>
                                        <input name="AccountType" value="Admin" readonly="readonly" style="display:none;" />
                                        <div class="mt-3">
                                             <p class="text-danger">@ViewBag.LoginErrorAdmin</p>
                                            <button type="submit" class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Giriş Yap</button>
                                        </div>
                                        <input type="text" class="form-control form-control-lg" name="CustomData" >
                                        <p class="">@ViewBag.CustomData</p>
                                         <button type="submit" class="btn btn-primary"></button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/themes/AgentTheme/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/themes/AgentTheme/assets/js/off-canvas.js"></script>
    <script src="~/themes/AgentTheme/assets/js/hoverable-collapse.js"></script>
    <script src="~/themes/AgentTheme/assets/js/misc.js"></script>
    <script>
        var hash = location.hash.replace(/^#/, '');
        if (hash) {
            $('.nav-tabs a[href="#' + hash + '"]').tab('show');
        }

        $('.nav-tabs a').on('shown.bs.tab', function (e) {
            window.location.hash = e.target.hash;
        })

        if(@ViewBag.AccountType=="Admin"){
            document.getElementsByClassName("nav-link")[1].click()
        }else{
            document.getElementsByClassName("nav-link")[0].click()
        }
    </script>
</body>
</html>

