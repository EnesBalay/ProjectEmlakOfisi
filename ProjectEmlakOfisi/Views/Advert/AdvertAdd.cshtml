<script>
    function changeCategory(){
        var select = document.getElementById('CategoryID');
        var value = select.options[select.selectedIndex].value;
        var housingAge=document.getElementById("HousingAge");
        var housingHallQuantity=document.getElementById("HousingHallQuantity");
        var housingRoomQuantity=document.getElementById("HousingRoomQuantity");
        var housingSquareMeters=document.getElementById("HousingSquareMeters");
        if(value==2){
            housingAge.required = false;
            housingHallQuantity.required=false;
            housingRoomQuantity.required=false;
        }else{
            housingAge.required = true;
            housingHallQuantity.required=true;
            housingRoomQuantity.required=true;
        }
    }

</script>

